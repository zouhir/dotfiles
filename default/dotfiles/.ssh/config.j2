Match all
  ControlMaster auto
  ControlPath ~/.ssh/ctrl-%C
  ControlPersist 8h
  Compression yes
  ServerAliveInterval 5
  ServerAliveCountMax 20
  ConnectTimeout 60
  ConnectionAttempts 2

{% if computer_type == "work" %}
{% set file_contents = lookup('file', playbook_dir + '/work/dotfiles/.ssh/hosts') %}
{{ file_contents }}
{% endif %}